---
import { formatDate } from "../utils/myUtils";
const {title, description, date} = Astro.props;
---

<div class="prose pl-6 pt-6 pr-6 m-auto">
    <h2 class="text-xl font-semibold">{title}</h2>
    <p>{description}</p>
    <span class="italic text-sm">{formatDate(date)}</span>
</div>
<div class="prose divider m-auto"></div>
